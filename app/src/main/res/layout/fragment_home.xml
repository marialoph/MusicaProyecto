<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.fragment.FragmentHome">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130sp"
        android:layout_marginStart="30sp"
        android:text="Aplicación de Música"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150sp"
        android:layout_marginStart="80sp"
        android:text="Bienvenido"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="170px"
        android:padding="7dp"
        android:background="@drawable/bordegif"
        android:layout_marginTop="600px"
        android:src="@drawable/musicnote" />

</FrameLayout>